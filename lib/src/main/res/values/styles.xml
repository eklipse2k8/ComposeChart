<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LineChart">
        <item name="backgroundColor">?attr/colorSurface</item>
    </style>

    <style name="LineChart.Axis.TextAppearance" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="LineChart.Axis">
        <item name="yAxisStartLineColor">?attr/colorOnBackground</item>
        <item name="yAxisStartLineSize">0.5dp</item>
        <item name="yAxisStartTextAppearance">@style/LineChart.Axis.TextAppearance</item>

        <item name="yAxisEndLineColor">?attr/colorOnBackground</item>
        <item name="yAxisEndLineSize">0.5dp</item>
        <item name="yAxisEndTextAppearance">@style/LineChart.Axis.TextAppearance</item>

        <item name="xAxisLineColor">?attr/colorOnBackground</item>
        <item name="xAxisLineSize">0.5dp</item>
        <item name="xAxisTextAppearance">@style/LineChart.Axis.TextAppearance</item>
    </style>

</resources>
